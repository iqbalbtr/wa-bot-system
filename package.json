    "baileys": "7.0.0-rc.9",
    "better-sqlite3": "^11.9.1",
    "cache-manager": "^6.4.3",
    "cron": "^4.3.0",
    "didyoumean": "^1.2.2",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.43.1",
